<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context="konox.actividad3.RegistroFragment">

    <LinearLayout
        android:orientation="vertical"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_Registro"
            android:layout_weight="0.2"
            android:gravity="center"
            android:padding="8dp"
            android:layout_marginBottom="140dp"
            android:textSize="26dp"
            android:text="Registro"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <EditText
            android:text="test"
            android:layout_margin="15dp"
            android:inputType="textPersonName"
            android:hint="@string/email"
            android:gravity="center"
            android:id="@+id/editTextNombreUsuario"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />


        <EditText
            android:text="User@text.com"
            android:layout_margin="15dp"
            android:inputType="textEmailAddress"
            android:hint="@string/email"
            android:gravity="center"
            android:id="@+id/editTextEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <EditText
            android:text="12345678"
            android:layout_margin="15dp"
            android:inputType="textPassword"
            android:hint="@string/password"
            android:gravity="center"
            android:id="@+id/editTextContraseña"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <Button
            android:layout_margin="15dp"
            android:id="@+id/btnOkRegistro"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/registrarse"/>

        <TextView
            android:textAlignment="center"
            android:text="¿Ya estás registrado? Logeate aquí"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/buttonLogin"/>

    </LinearLayout>


</LinearLayout>
