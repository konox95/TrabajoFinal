<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="konox.actividad3.MainActivity">


    <fragment
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:name="konox.actividad3.LoginFragment"
        android:id="@+id/LogFragment"
        tools:layout="@layout/fragment_login" />

    <fragment
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:name="konox.actividad3.RegistroFragment"
        android:id="@+id/Regfragment" />

    <fragment
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:name="konox.actividad3.CreditosFragment"
        android:id="@+id/Credfragment"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
