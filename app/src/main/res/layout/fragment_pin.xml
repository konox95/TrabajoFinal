<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@android:color/transparent"
              android:orientation="vertical"
              android:paddingLeft="60dp"
              android:paddingRight="60dp"
              android:padding="@android:dimen/app_icon_size"
              android:paddingTop="60dp"
              android:weightSum="2">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/layout_bg"
            android:orientation="vertical"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:paddingTop="1dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageButton
                    android:id="@+id/imgBtnClose"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_gravity="right"
                    android:background="@android:color/transparent"
                    android:paddingRight="1dp"
                    android:paddingTop="2dp"
                    android:src="@mipmap/ic_clear_black_24dp"/>

                <ImageButton
                    android:id="@+id/imgBtnFavorites"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_gravity="left"
                    android:background="@android:color/transparent"
                    android:paddingRight="1dp"
                    android:paddingTop="2dp"
                    android:src="@mipmap/ic_grade_black_24dp"/>

            </LinearLayout>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/txtName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:hint="@string/nombre"
                        android:text=""
                        android:textAlignment="center"
                        android:textColor="@color/BLANCO"
                        android:textSize="16sp"/>

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imgSpot"
                    android:layout_width="match_parent"
                    android:layout_height="100sp"
                    android:src="@drawable/skatepark"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/titleTipoSpot"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:hint="@string/tipo"
                        android:text="@string/tipo_de_spot_1"
                        android:textAlignment="center"
                        android:textColor="@color/BLANCO"
                        android:textSize="16sp"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/txtTipo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:hint="@string/tipo"
                        android:text=""
                        android:textAlignment="center"
                        android:textColor="@color/BLANCO"
                        android:textSize="16sp"/>

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_marginTop="5dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/titleDificultad"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:hint="@string/dificultad_spot"
                        android:text="@string/dificultad_del_spot"
                        android:textAlignment="center"
                        android:textColor="@color/BLANCO"
                        android:textSize="16sp"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:layout_marginTop="5dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/txtDificultad"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:hint="@string/dificultaddd"
                        android:text=""
                        android:textAlignment="center"
                        android:textColor="@color/BLANCO"
                        android:textSize="16sp"/>

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginTop="5dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/Componentes"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/componentes"
                        android:textAlignment="center"
                        android:textColor="@color/BLANCO"
                        android:textSize="16sp"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/icBanco"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/ic_clear_black_24dp"/>

                    <TextView
                        android:id="@+id/CBanco"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/cbanco"
                        android:textAlignment="center"
                        android:textColor="@color/BLANCO"
                        android:textSize="16sp"/>

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/ic_clear_black_24dp"
                        android:id="@+id/icBarandilla"/>

                    <TextView
                        android:id="@+id/CBarandilla"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/cbarandilla"
                        android:textAlignment="center"
                        android:textColor="@color/BLANCO"
                        android:textSize="16sp"/>

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/ic_clear_black_24dp"
                        android:id="@+id/icBowl"/>

                    <TextView
                        android:id="@+id/CBowl"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/cbowl"
                        android:textAlignment="center"
                        android:textColor="@color/BLANCO"
                        android:textSize="16sp"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:layout_marginTop="5dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/ic_clear_black_24dp"
                        android:id="@+id/icCajon"/>

                    <TextView
                        android:id="@+id/CCajon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/ccajon"
                        android:textAlignment="center"
                        android:textColor="@color/BLANCO"
                        android:textSize="16sp"/>

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/ic_clear_black_24dp"
                        android:id="@+id/icEscalera"/>

                    <TextView
                        android:id="@+id/CEscalera"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:hint="@string/cescalera"
                        android:text="@string/cescalera"
                        android:textAlignment="center"
                        android:textColor="@color/BLANCO"
                        android:textSize="16sp"/>

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/ic_clear_black_24dp"
                        android:id="@+id/icRampa"/>

                    <TextView
                        android:id="@+id/CRampa"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:hint="@string/crampa"
                        android:text="@string/crampa"
                        android:textAlignment="center"
                        android:textColor="@color/BLANCO"
                        android:textSize="16sp"/>

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/txtDescript"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:hint="@string/descripci_n"
                        android:text=""
                        android:textAlignment="center"
                        android:textColor="@color/BLANCO"
                        android:textSize="16sp"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/btnEmpezar"
                        android:text="@string/comenzar_viaje"/>
                </LinearLayout>

                </LinearLayout>
        </LinearLayout>
</LinearLayout>
