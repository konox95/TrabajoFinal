<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent"
    android:orientation="vertical"
    android:paddingLeft="60dp"
    android:paddingRight="60dp"
    android:paddingTop="60dp"
    android:weightSum="6">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:background="@drawable/layout_bg"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:paddingTop="1dp"
            android:weightSum="4">

            <ImageButton
                android:id="@+id/imgBtnClose"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="right"
                android:background="@android:color/transparent"
                android:paddingRight="1dp"
                android:paddingTop="2dp"
                android:src="@mipmap/ic_clear_black_24dp" />

            <ImageView
                android:id="@+id/imgSpot"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2"
                android:src="@drawable/skatepark" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:weightSum="1">

                <TextView
                    android:id="@+id/txtName"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:hint="Nombre"
                    android:text=""
                    android:textAlignment="center"
                    android:textSize="16dp" />

                <TextView
                    android:id="@+id/txtDescript"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:hint="DescripciÃ³n"
                    android:text=""
                    android:textAlignment="center"
                    android:textSize="16dp" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txtTipo"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:hint="Tipo"
                    android:text=""
                    android:textAlignment="center"
                    android:textSize="16dp" />

                <TextView
                    android:id="@+id/txtDificultad"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:hint="Dificultad"
                    android:text=""
                    android:textAlignment="center"
                    android:textSize="16dp" />
            </LinearLayout>


        </LinearLayout>


    </LinearLayout>
</LinearLayout>
